{% macro delete_button(modal_target, title='Smazat', icon='trash', color='outline-danger') %}
    <button type="button"
            class="btn btn-{{ color }} btn-sm"
            data-bs-toggle="modal"
            data-bs-target="#{{ modal_target }}"
            title="{{ title }}">
        <i class="fas fa-{{ icon }}"></i>
    </button>
{% endmacro %}

